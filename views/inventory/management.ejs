<!-- management.ejs -->

<div class="management-container">
  <h1><%= title %></h1>

  <% if (errorMessage && errorMessage.length > 0) { %>
  <div class="flash-message error" role="alert">
    <ul>
      <% errorMessage.forEach(function(msg) { %>
      <li><%= msg %></li>
      <% }); %>
    </ul>
  </div>
  <% } else if (message && message.length > 0) { %>
  <div class="flash-message success" role="status"><%= message %></div>
  <% } %>

  <ul class="management-links">
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-vehicle">Add New Vehicle</a></li>
  </ul>

  <div class="inventory-management">
    <h2>Manage Inventory</h2>
    <p>
      Select a classification from the list to see the items belonging to that
      classification.
    </p>

    <!-- Classification Select List -->
    <form id="classificationForm"><%- classificationSelect %></form>

    <!-- Inventory Table -->
    <table id="inventoryDisplay" class="inventory-table">
      <!-- JavaScript will populate this table -->
    </table>

    <!-- Fallback for no JavaScript -->
    <noscript>
      <p class="noscript-warning">
        JavaScript must be enabled to use this page.
      </p>
    </noscript>
  </div>
</div>

<!-- Link to external JavaScript file -->
<script src="/js/inventory.js" defer></script>
