<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <div id="tools">
    <% if (locals.loggedin && locals.accountFirstname) { %>
    <!-- Link to Account Management -->
    <a href="/account/" title="Manage your account">
      Welcome <%= accountFirstname %>
    </a>

    <!-- Logout Link -->
    <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
    <!-- Login Link -->
    <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>
  </div>
</header>
